@{
    ViewData["Title"] = "Registration Page";
}
@model TrainingAssignment.Entities.ViewModels.UserRegisterModel
<div class="row w-100" style="height:90vh;">

    <div class="col-lg-12 col-md-12 col-sm-12">
        <div class="container-fluid mt-5">
            <form asp-action="Registration" id="form" asp-controller="Home" method="post" enctype="multipart/form-data">

                <div class="row main w-100">
                    <div class="col-lg-12 col-md-12 col-sm-12 profile-details">
                        <div class="w-100 border-bottom">
                            <h5>User Details</h5>
                        </div>
                        <div class="row mt-3">

                            <div class="col-lg-6">
                                <label class="form-label" asp-for=FirstName>First Name</label><input placeholder="Enter First Name" asp-for=FirstName type="text" class="form-control" id='oname' />
                                <span asp-validation-for=FirstName class="text-danger d-block"></span>
                            </div>
                            <div class="col-lg-6">
                                <label class="form-label" asp-for=SurName>SurName</label><input placeholder="Enter Last Name" asp-for=SurName type="text" class="form-control" id='oname' />
                                <span asp-validation-for=SurName class="text-danger d-block"></span>
                            </div>
                            <div class="col-lg-6">
                                <label asp-for=avatar class="form-label mt-2">Avatar</label>
                                <input asp-for=avatar type="file"
                                       accept="/images/*"
                                       class="form-control"
                                       id="email"
                                       aria-describedby="emailHelp" />
                            </div>
                            <div class="col-md-6 mb-4 mt-3" id="Gender">

                                <h6 class="mb-2 pb-1">Gender </h6>

                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" asp-for="GenderId" 
                                           value="1" />
                                    <label asp-for="GenderId" class="form-check-label">Male</label>
                                </div>

                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" asp-for="GenderId" 
                                           value="2" />
                                    <label asp-for="GenderId" class="form-check-label">Female</label>
                                </div>

                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" asp-for="GenderId" 
                                           value="3" />
                                    <label asp-for="GenderId" class="form-check-label">Other</label>
                                </div>
                                <span asp-validation-for=GenderId class="text-danger d-block"></span>


                            </div>

                            <div class="col-lg-6">
                                <label asp-for=Email class="form-label mt-2">Email address</label>
                                <input type="email"
                                       asp-for=Email
                                       class="form-control"
                                       id="email"
                                       aria-describedby="emailHelp" />
                                <span asp-validation-for="Email" class="text-danger d-block"></span>
                            </div>
                            <div class="col-lg-6">
                                <label asp-for=PhoneNumber class="form-label mt-2">Phone Number</label>
                                <input asp-for=PhoneNumber type="tel" class="form-control" id="phone" />
                                <span asp-validation-for="PhoneNumber" class="text-danger d-block"></span>
                            </div>
                            <div class="col-lg-6">
                                <label asp-for=Password class="form-label mt-2">Password</label>
                                <input asp-for=Password type="password" class="form-control" id="password" />
                                <span asp-validation-for="Password" class="text-danger d-block"></span>
                            </div>
                            <div class="col-lg-6">
                                <label asp-for=ConfirmPassword class="form-label mt-2">Confirm Password</label>
                                <input asp-for=ConfirmPassword type="password" class="form-control" id="c-password" />
                                <span asp-validation-for="ConfirmPassword" class="text-danger d-block"></span>
                            </div>
                        </div>
                        <div class="row mt-2">

                            <div class="col mt-2">
                                <label asp-for=CountryId class="form-label">Country</label><select asp-for="CountryId" onchange="getstates()" class="form-select country me-3" aria-label="Select Mission">
                                    <option disabled selected>Select Country</option>
                                    @{
                                        foreach (var item in Model.countries)
                                        {
                                            <option value="@item.CountryId">@item.CountryName</option>
                                        }
                                    }
                                </select>
                                <span asp-validation-for=CountryId class="text-danger d-block"></span>
                            </div>

                            <div class="col mt-2">
                                <label asp-for=StateId class="form-label">State</label><select asp-for="StateId" onchange="getcities()" class="form-select states me-3" aria-label="Select Mission">
                                    <option disabled selected>Select State</option>
                                </select>
                                <span asp-validation-for=StateId class="text-danger d-block"></span>
                            </div>

                            <div class="col mt-2">
                                <label asp-for=CityId class="form-label">City</label><select asp-for=CityId class="form-select city me-3" aria-label="Select Mission">
                                    <option disabled selected>Select City</option>
                                </select>
                                <span asp-validation-for=CityId class="text-danger d-block"></span>
                            </div>

                        </div>

                        <div class="d-flex justify-content-end">
                            <button type="submit" style="border: 2px solid #F88634;border-radius: 100px;color: #F88634;padding-left: 20px; padding-right: 20px;" class="btn mt-4">Register</button>
                        </div>

                    </div>
                </div>
            </form>
            @if (ViewBag.Message != null)
            {
                <script type="text/javascript">

                    window.onload = function () {
                        alert("@ViewBag.Message");
                    };
                </script>
            }
            <div class="toregister text-center mt-2">
                <p class="mt-2">
                    Already registered?<a asp-action="Login" style="text-decoration: none">Login now</a>
                </p>
            </div>
        </div>
    </div>

</div>
<script src="~/js/site.js"></script>
@section scripts{
    @{
    <partial name="_ValidationScriptsPartial" />
    }
    }
