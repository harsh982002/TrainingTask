@{
    ViewData["Title"] = "Login Page";
}
@model TrainingAssignment.Entities.ViewModels.LoginViewModel
<div class="row w-100" style="height:90vh;">

    <div class="col-lg-12 col-md-12 col-sm-12">
        <div class="container-fluid mt-5">
            <form asp-action="Login" id="form" asp-controller="Home" method="post" enctype="multipart/form-data">

                <div class="row main w-100">
                    <div class="col-lg-12 col-md-12 col-sm-12 profile-details">
                        <div class="w-100 border-bottom">
                            <h5>Login Page</h5>
                        </div>
                        <div class="row mt-3">

                            <div class="col-lg-6">
                                <label asp-for=Email class="form-label mt-2">Email address</label>
                                <input asp-for=Email type="email"
                                       class="form-control"
                                       id="email"
                                       aria-describedby="emailHelp" />
                                <span asp-validation-for="Email" class="text-danger d-block"></span>
                            </div>

                            <div class="col-lg-6">
                                <label asp-for=Password class="form-label mt-2">Password</label>
                                <input asp-for=Password type="password" class="form-control" id="password" />
                                <span asp-validation-for="Password" class="text-danger d-block"></span>
                            </div>

                        </div>

                        <div class="d-flex justify-content-end">
                            <button type="submit" style="border: 2px solid #F88634;border-radius: 100px;color: #F88634;padding-left: 20px; padding-right: 20px;" class="btn mt-4">Login</button>
                        </div>

                    </div>
                </div>
            </form>
            @if (ViewBag.Message != null)
            {
                <script type="text/javascript">

                    window.onload = function () {
                        alert("@ViewBag.Message");
                    };
                </script>
            }
            <div class="toregister text-center mt-2">
                <p class="mt-2">
                    Don't have an account?<a asp-action="Registration" style="text-decoration: none">Register Yourself</a>
                </p>
            </div>
        </div>
    </div>

</div>

@section scripts{
    @{
    <partial name="_ValidationScriptsPartial" />
    }
    }
